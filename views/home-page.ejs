<% include components/pageHeader %>

	<% if (info=="task-added") { %>
		
		<div id="info-box" class="alert alert-info">
			Your new task has been added.
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		</div>

	<% } %>
	<% if (info=="task-deleted") { %>
		
		<div id="info-box" class="alert alert-warning">
			Your task has been deleted.
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		</div>

	<% } %>
	<% if (info=="task-done") { %>
		
		<div id="info-box" class="alert alert-success">
			Your task has been done.
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		</div>

	<% } %>

	<% if (tasks.length > 0) { %>

		<% for (var i = 0; i < tasks.length; i++) { %>
			<div class='task task-<%=tasks[i].status%>' data-task-id='<%=tasks[i]._id%>'>
				<h2>
					<%=tasks[i].text%>
				</h2>
				<p>
					<a class="btn btn-success done-task btn-xs" href="/DoneTask/<%=tasks[i]._id%>"role="button"> <span class="glyphicon glyphicon-ok-circle"></span> Done</a>

					<a class="btn btn-warning delete-task btn-xs" href="/DeleteTask/<%=tasks[i]._id%>" role="button"><span class="glyphicon glyphicon-remove-circle"></span></a>
				</p>
			</div>
		<% } %>

	<% } else { %>

		<p id="no-current-tasks">
			You have no current tasks.
		</p>

	<% } %>

	<p>
		<a class="btn btn-default" href="/NewTask" role="button">Add New Task</a>
	</p>

<% include components/pageFooter %>