<% include components/pageHeader %>

	<% if (info=="task-added") { %>
		
		<div id="info-box" class="alert alert-info">
			Your new task has been added.
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		</div>

	<% } %>
	<% if (info=="task-deleted") { %>
		
		<div id="info-box" class="alert alert-warning">
			Your task has been deleted.
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		</div>

	<% } %>

	<% if (tasks.length > 0) { %>

		<% for (var i = 0; i < tasks.length; i++) { %>
			<p class='task' data-task-id='<%=tasks[i]._id%>'><%=tasks[i].text%> <a class="delete-task" href="/DeleteTask/<%=tasks[i]._id%>">Delete</a></p>
		<% } %>

	<% } else { %>

		<p id="no-current-tasks">
			You have no current tasks.
		</p>

	<% } %>

	<p>
		<a class="btn btn-default" href="/NewTask" role="button">Add New Task</a>
	</p>

<% include components/pageFooter %>