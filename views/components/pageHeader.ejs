		<script src="/js/bootstrap.min.js"></script>

		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		<style>
			body {
				background-image: url('/img/pizza_basic2.png');
			}

			a {
				cursor:pointer;
			}

			h1 {
				text-align: left;
				margin-top: 0px;
				font-size: 28px;
				margin-bottom: 20px;
			}

			body { 
				margin-top: 1em;
			}

			.task {
				word-wrap: break-word;
			}

			.task-done .task-text {
				text-decoration: line-through;
				color: #999;
			}

			.delete-confirmation {
				display: none;
				color: red;
			}

			.add-new-task-button {
				margin-bottom: 30px;
			}

			.more-options {
				display: none;
			}
		</style>

