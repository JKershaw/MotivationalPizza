<h3>
	<%-task.text%>
</h3>

<% if (task.tags && task.tags.length > 0) { %>

	<p><small> Tags: 
		<% for (var tag_i = 0; tag_i < task.tags.length; tag_i ++) { %><% if (tag_i > 0) { %>, <%}%><span class="tag"><%=task.tags[tag_i].text%></span><%}%>
	</small></p>

<%}%>

<p>
	
	<% if (task.status == 'tomorrow') { %>
	
		<% include buttons/today %>

	<% } else { %>

		<% include buttons/tomorrow %>

	<% } %>

	<% include buttons/more %>

	<span class='more-options'>

		<% include buttons/less %>

		<% include buttons/edit %>

		<% if (task.status == 'tomorrow') { %>
		
			<% include buttons/some-other-time %>

		<% } else { %>

			<% include buttons/today %>

		<% } %>

		<% include buttons/bump %>

		<% include buttons/delete %>

	</span>
</p>