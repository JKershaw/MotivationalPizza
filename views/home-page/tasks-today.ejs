
<% if (openTasks.length >= 5) { %>

	<div class="alert alert-warning">
		<p>
			You have plenty to do today. Before you add more tasks to today you should complete a one or mark one as due another day. Remember; <strong>if something is important it'll come back</strong>.
		</p>
	</div>
<% } %>

<div class="jumbotron">

	<% if (openTasks.length > 0) { %>

		<% openTasks.forEach(function(task, i){ %>
			<div class='task task-open' data-i="<%=i%>" data-task-id='<%=task._id%>'>
				
				<% 	include task-open %>

			</div>
		<% }) %>

	<% } else { %>

		<h2 id="no-current-tasks">
			<% if (pizzaForDinner) { %>
				Hurray! You've done everything you need to today. Pizza for dinner!
			<% } else { %>
				Oh sweet, you currently have no tasks to do.
			<% } %>
		</h2>

	<% } %>

</div>

<p class="add-new-task-button">
	<% if (openTasks.length >= 5) { %>
		<a class="btn btn-success btn-lg btn-block disabled" href="/NewTask" role="button">Add New Task</a>
	<% } else { %>
		<a class="btn btn-success btn-lg btn-block" href="/NewTask" role="button">Add New Task</a>
	<% } %>
</p>