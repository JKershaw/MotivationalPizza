pkill node
set -e

echo "Acceptance Tests"

echo "Dropping database"
mongo "motivational-pizza" --eval "db.dropDatabase()"

foreman start &
sleep 1

mocha tests/acceptance/mark-tomorrow-tasks-as-to-do-today.js --recursive --ui tdd --reporter nyan --timeout 30000 --bail

echo "Acceptance tests complete"

pkill node

echo "All tests passed!"
