pkill node
set -e

export MONGO_CONNECTION_STRING=mongodb://localhost/motivational-pizza

echo "Dropping database"
mongo "motivational-pizza" --eval "db.dropDatabase()"

if [ $# -lt 0  ]; then
	echo "Running JSHint"
	jshint ./tests/integration ./tests/unit  ./tests/acceptance
fi

echo "Unit Tests"
mocha tests/unit/ --ui qunit --reporter nyan --timeout 5000
echo "Unit tests complete"

echo "QUnit Tests"
for D in tests/qunit/*; do
    if [ -d "${D}" ]; then
			DIR="$D/*.html"
			echo "testing in $DIR"
			#phantomjs tests/qunit/runner.js $DIR
	fi
done
echo "QUnit tests complete"


echo "Integration Tests"

echo "Dropping database"
mongo "motivational-pizza" --eval "db.dropDatabase()"

foreman start &
sleep 1
mocha tests/integration/ --recursive --ui tdd --reporter nyan --timeout 2000
echo "Integration tests complete"

pkill node

echo "Acceptance Tests"

echo "Dropping database"
mongo "motivational-pizza" --eval "db.dropDatabase()"

foreman start &
sleep 1

echo "Running test tests/acceptance/"
mocha tests/acceptance/ --recursive --ui tdd --reporter nyan --timeout 30000

echo "Acceptance tests complete"

pkill node

echo "All tests passed!"

if [ $# -gt 0  ]; then
	MESSAGE="$@"
	echo "Committing with message '$MESSAGE'"
	git add -A
	git commit -am "$MESSAGE"
	echo "Git Committed"
	git push
else
  echo "No commit message, no commit"
fi