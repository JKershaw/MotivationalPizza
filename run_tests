pkill node
set -e

export MONGO_CONNECTION_STRING=mongodb://localhost/motivational-pizza

if [ $# -gt 0  ]; then

	echo "------------------------------------------"
	echo "Syncing with GitHub"
	echo "------------------------------------------"

	git pull github
else
  echo "Skipping Git Pull from GitHub"
fi

if [ $# -gt 0  ]; then
	echo "Running JSHint"
	jshint ./tests/acceptance
	jshint ./tests/unit
	jshint ./tests/integration
	jshint ./routes
	jshint ./lib
	echo "JSHint Completed"
else
  echo "Skipping JSHint"
fi

echo "=========================================="
echo "Unit Tests"
echo "=========================================="

mocha tests/unit/ --ui qunit --reporter nyan --timeout 1000
echo "Unit tests complete"

echo "=========================================="
echo "QUnit Tests"
echo "=========================================="

for D in tests/qunit/*; do
    if [ -d "${D}" ]; then
			DIR="$D/*.html"
			echo "testing in $DIR"
			phantomjs tests/qunit/runner.js $DIR
	fi
done
echo "QUnit tests complete"

echo "=========================================="
echo "Integration Tests"
echo "=========================================="

echo "Dropping database"
mongo "motivational-pizza" --eval "db.dropDatabase()"

mocha tests/integration/ --recursive --ui tdd --reporter nyan --timeout 3000
echo "Integration tests complete"

echo "=========================================="
echo "Acceptance Tests"
echo "=========================================="

echo "Dropping database"
mongo "motivational-pizza" --eval "db.dropDatabase()"

foreman start &
sleep 1

echo "Running test tests/acceptance/"
mocha tests/acceptance/ --recursive --ui tdd --reporter spec --timeout 60000 --bail

echo "Acceptance tests complete"

echo "=========================================="
echo "All tests passed!"
echo "=========================================="

pkill node


if [ $# -gt 0  ]; then

	MESSAGE="$@"
	echo "Committing with message '$MESSAGE'"
	git add -A
	git commit -am "$MESSAGE"
	echo "Git Committed"

	echo "------------------------------------------"
	echo "Pushing to Heroku"
	echo "------------------------------------------"

	git push heroku

	echo "------------------------------------------"
	echo "Pushing to GitHub"
	echo "------------------------------------------"

	git push github

else
  echo "No commit message, no commit"
fi
